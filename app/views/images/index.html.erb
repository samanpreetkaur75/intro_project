<div class="container mt-5">
  <div class="row">
    <div class="col-12">

      <h3 class="mb-4 text-center">Breed Details</h3>
      <div class="mb-3">
        <h4>Breed Name: <span class="text-primary font-weight-bold"><%= @breed.name %></span></h4>
        <h4>Size: <span class="text-secondary font-weight-bold"><%= @breed.size %></span></h4>
      </div>

      <h5 class="mt-4">Images:</h5>
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td class="text-center">
                <a href="<%= image.url %>" target="_blank">
                  <img src="<%= image.url %>" alt="Image of <%= @breed.name %>" class="img-fluid rounded shadow" style="max-width: 150px;">
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="d-flex justify-content-center mt-4">
        <%= link_to 'Back to Breeds', breeds_path, class: 'btn btn-primary btn-lg' %>
      </div>

    </div>
  </div>
</div>
